@using Microsoft.JSInterop
<!-- Based on https://www.w3schools.com/howto/howto_js_slideshow.asp -->
@inject IJSRuntime JS

<div class="ecommerce-imagegallery-container" id="@Identifier">
    <!-- Slideshow container -->
    <div class="slideshow-container">

        <!-- Full-width images with number and caption text -->
        @foreach (var item in Items)
        {
            <div class="mySlides fade">
                <div class="numbertext">@($"{Items.IndexOf(item) + 1} /  {Items.Count}")</div>
                <img src="@item.ImageUrl" style="width:100%" loading="@Loading">
                <div class="text">@item.Caption</div>
            </div>
        }

        <!-- Next and previous buttons -->
        <a class="prev" onclick="plusSlides('@Identifier', -1)">&#10094;</a>
        <a class="next" onclick="plusSlides('@Identifier', 1)">&#10095;</a>
    </div>
    <br>

    <!-- The dots/circles -->
    <div style="text-align: center">
        @for (int i = 1; i <= Items.Count; i++)
        {
            <span class="dot" onclick="currentSlide('@Identifier', @i)"></span>
        }
    </div>
</div>